<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pickUP">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<android.support.v7.widget.CardView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_columnWeight="1"
android:layout_rowWeight="1"
android:layout_margin="20dp"
app:cardBackgroundColor="@color/cardview"

android:id="@+id/travel">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_horizontal|center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick up from"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"
            android:gravity="center_horizontal"
            />
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_local_shipping_black_24dp"
            android:id="@+id/imgshopping1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tell  us the address from where
            we will pick up the items"
            android:textColor="#000"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/txtvresult"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/cardview"
        android:id="@+id/travelpick">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_horizontal|center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drop at"
                android:textSize="20dp"
                android:textColor="@color/colorAccent"
                android:gravity="center_horizontal"
                />
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="15dp"
                android:src="@drawable/ic_location_on_black_24dp"
                android:id="@+id/imagshopping"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tell  us the address from where
            we will pick up the items"
                android:textColor="#000"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:id="@+id/drop"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
</ScrollView>