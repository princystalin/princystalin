<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".help">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT US"
        android:layout_margin="15dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/txtvcontact"
       />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:layout_below="@id/txtvcontact"
        android:background="@android:color/black"
        android:id="@+id/cviewone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cviewone"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textColor="@color/colorAccent"
        android:text="Like us on Facebook"
        android:textSize="15dp"
        android:textStyle="bold"
        android:id="@+id/txtvfb"/>

    <ImageView
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@id/txtvfb"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fb"
        android:id="@+id/imgfb"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:layout_below="@id/imgfb"
        android:background="@android:color/black"
        android:id="@+id/cviewtwo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Follow Us On Instagram"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cviewtwo"
        android:id="@+id/txtvinsta"/>

    <ImageView
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@id/txtvinsta"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/insta"
        android:id="@+id/imginsta"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:layout_below="@id/imginsta"
        android:background="@android:color/black"
        android:id="@+id/cviewthree"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Give Us FeedBack on Gmail"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cviewthree"
        android:id="@+id/txtvgmail"/>

    <ImageView
        android:layout_width="75sp"
        android:layout_height="75sp"
        android:layout_below="@id/txtvgmail"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/gmail"
        android:id="@+id/imggmail"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="5dp"
        android:layout_below="@id/imggmail"
        android:background="@android:color/black"
        android:id="@+id/cviewfour"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call Us On"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cviewfour"
        android:id="@+id/txtvconta"/>

    <ImageView
        android:id="@+id/imgconta"
        android:layout_width="75sp"
        android:layout_height="70dp"
        android:layout_below="@id/txtvconta"
        android:layout_centerHorizontal="true"

        android:src="@drawable/contacts" />


</RelativeLayout>