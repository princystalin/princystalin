<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardElevation="20dp"
    tools:context=".rv_order">


    <LinearLayout
        android:padding="10dp"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:layout_margin = "10dp">

        <ImageView
            android:id="@+id/product_order_image"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/catgory"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="70dp"
                android:text="catgory"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingRight="70dp"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/subcatgory"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="70dp"
                android:text="subcatgory"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingRight="70dp"
                android:layout_below="@+id/catgory"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"/>
            <TextView
                android:id="@+id/product_description"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="70dp"
                android:text="product"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingRight="70dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/subcatgory"/>
            />
            <TextView
                android:id="@+id/quatity"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="70dp"
                android:text= "quantity"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingRight="70dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorAccent"
                android:layout_below="@+id/product_description"/>






            <!--<TextView-->
                <!--android:id="@+id/product_order_price"-->
                <!--android:layout_width="70dp"-->
                <!--android:layout_height="30dp"-->
                <!--android:layout_marginStart="95dp"-->
                <!--android:layout_marginTop="75dp"-->
                <!--android:layout_weight="5"-->
                <!--android:gravity="center"-->
                <!--android:text="100"-->
                <!--android:textColor="@color/colorAccent"-->
                <!--android:layout_marginLeft="95dp" />-->

        </RelativeLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>